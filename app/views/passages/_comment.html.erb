<% flour=1 %>
<%@passage.comments.each do |comment| %>
<hr color="#ff99cc" style="filter:alpha(opacity=100,finishopacity=0,style=1);">
<div class="box">
<%=flour%>.
<%userinfo2=Userinfo.find(:first, :conditions=>{:user_id=>comment.user_id})%>
 <%=image_tag userinfo2.image.thumb%>
<%=link_to comment.author,edit_userinfo_path(userinfo2.id) %>
(<%=userinfo2.pr%>)
<%flour+=1%>
<p>
<p><%=raw RbbCode.new.convert(comment.content) %></p>
<%=comment.updated_at.strftime('%Y/%m/%d %H:%M')%>
 <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[quote]<%=comment.content%>[/quote]')" value="引用" class='btn btn-mini'></input>
<%if current_user.username==comment.author %>
<%= link_to '編集', edit_comment_path(comment.id), :class => 'btn btn-mini' %>
 <%= link_to 'コメントを削除', comment_path(comment.id),:method => :delete, :confirm => '本当に本当に削除しますか?',:class => 'btn btn-mini btn-danger' %>
 <%end%>
</p>
</div>
<% end %>
<div >
  <hr color="#ff99cc" style="filter:alpha(opacity=100,finishopacity=0,style=1);">
</div>