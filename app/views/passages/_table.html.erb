
 <%if @passages!=nil%>
<% @passages.each do |p| %>
<div id="passage_<%=p.id%>">
<%= link_to p.title, passage_path(p.id) %>
<%=link_to p.author, edit_userinfo_path(Userinfo.where(:user_id=>p.user_id).first.id) %>
<%= p.comments.size %>/<%= p.clicked%>
<% if !p.comments.empty? %>
<%com=p.comments.find(:last)%>
<%=link_to com.author, edit_userinfo_path(Userinfo.where(:user_id=>com.user_id).first.id)%>
<%else %>
<td>__</td> 
<%end%>
<%= p.created_at.strftime('%Y/%m/%d %H:%M') %>
<% end %>
<%end%>
