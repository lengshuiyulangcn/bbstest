<div>
<h2><%= @passage.title %></h2>
</div>
<p>
  <hr color="#ff99cc" style="filter:alpha(opacity=100,finishopacity=0,style=1);">
  <p>
  <b>作者:</b>
  <%userinfo1=Userinfo.find(:first, :conditions=>{:user_id=>@passage.user_id})%>
   <%=image_tag userinfo1.image.thumb%>
  <%=link_to @passage.author, edit_userinfo_path(Userinfo.find(:first,:conditions=>{:user_id=>@passage.user_id}).id)  %>
  (<%=userinfo1.pr%>)
</p>
  <b>正文</b><br>
  <%=raw RbbCode.new.convert(@passage.content) %>
</p>

<br>
<br>
<%=@passage.created_at.strftime('%Y/%m/%d %H:%M')%>
<div id="comment_table"><%=render :partial=>"comment"%></div>
<%= form_for @comment,:remote=>true do |f| %>
<p><%= f.label "コメント:" ,:class=> "label label-info"%>
  <% if @comment.errors.any?%>
  <% @comment.errors[:content].each do |error|%>
  <%=error %>
  <%end%>
  <%end%>
  <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[img][/img]')" value="画像" ></input>
  <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[b][/b]')" value="bold" ></input>
  </p>
  <%= f.text_area :content, :id=>"txtarea1"%>
  <%=f.hidden_field :passage_id , :value=>@passage.id %>
  <p><%= f.submit "提出",  :class => 'btn btn-mini' %></p>
<% end %>
