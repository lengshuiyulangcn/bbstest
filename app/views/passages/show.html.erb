<div>
<h2><%= @passage.title %></h2>
</div>
<p>
  <hr color="#ff99cc" style="filter:alpha(opacity=100,finishopacity=0,style=1);">
  <p>
  <b>作者:</b>
  <%userinfo1=Userinfo.find(:first, :conditions=>{:user_id=>@passage.user_id})%>
   <%=image_tag userinfo1.image.thumb%>
  <%=link_to @passage.author, edit_userinfo_path(Userinfo.find(:first,:conditions=>{:user_id=>@passage.user_id}).id)  %>
  (<%=userinfo1.pr%>)
</p>
  <b>正文</b><br>
  <%=raw RbbCode.new.convert(@passage.content) %>
</p>

<br>
<br>
<%=@passage.created_at.strftime('%Y/%m/%d %H:%M')%>
<% flour=1 %>
<%@passage.comments.each do |comment| %>
<hr color="#ff99cc" style="filter:alpha(opacity=100,finishopacity=0,style=1);">
<div class="box">
<%=flour%>.
<%userinfo2=Userinfo.find(:first, :conditions=>{:user_id=>comment.user_id})%>
 <%=image_tag userinfo2.image.thumb%>
<%=link_to comment.author,edit_userinfo_path(userinfo2.id) %>
(<%=userinfo2.pr%>)
<%flour+=1%>
<p>
<p><%=raw RbbCode.new.convert(comment.content) %></p>
<%=comment.updated_at.strftime('%Y/%m/%d %H:%M')%>
 <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[quote]<%=comment.content%>[/quote]')" value="引用" class='btn btn-mini'></input>
<%if current_user.username==comment.author %>
<%= link_to '編集', edit_comment_path(comment.id), :class => 'btn btn-mini' %>
 <%= link_to 'コメントを削除', comment_path(comment.id),:method => :delete, :confirm => '本当に本当に削除しますか?', :class => 'btn btn-mini btn-danger' %>
 <%end%>
</p>
</div>
<% end %>
<div >
  <hr color="#ff99cc" style="filter:alpha(opacity=100,finishopacity=0,style=1);">
	<% if current_user.username==@passage.author %>
<%=link_to "delete", passage_path(@passage.id),:method => :delete %>
<% end %>
</div>
<%= form_for @comment do |f| %>
<p><%= f.label "コメント:" ,:class=> "label label-info"%>
  <% if @comment.errors.any?%>
  <% @comment.errors[:content].each do |error|%>
  <%=error %>
  <%end%>
  <%end%>
  <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[img][/img]')" value="画像" ></input>
  <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[b][/b]')" value="bold" ></input>
  </p>
  <%= f.text_area :content, :id=>"txtarea1"%>
  <%=f.hidden_field :passage_id , :value=>@passage.id %>
  <p><%= f.submit "提出",  :class => 'btn btn-mini' %></p>
<% end %>

<div><%=link_to "index", root_path%></div>
