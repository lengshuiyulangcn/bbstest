
<h1>投稿一覧
  <%if current_user.userinfo!=nil%>
	<%=image_tag current_user.userinfo.image, :alt=>"icon"%>
<%end%>
<div class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    操作
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li>
    	<%=link_to "ユーザ情報確認/変更", edit_userinfo_path(current_user.id)%>
    </li>
    <li>
    	<a data-toggle="modal" href="#myModal">新しい書き込み</a>
    </li>
  </ul>
</div>
</h1>
<div id="passagetable"><%=render :partial=>"table"%></div>
<div class="pagination">
    <ul>
        <li class="disabled"><a href="#">«</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">»</a></li>
    </ul>
</div>
 <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <h3 id="myModalLabel">Create New Passage</h3>
  </div>
  <div class="modal-body">
    <%= form_for @passage,:url=>{:action=>"create"} do |f| %>
<%= f.label "タイトル" ,:class=> "label label-info"%><div id="title_error"></div>
  <%= f.text_field :title ,:id=>"txttitle", :class=>"span5" %>
  <br/><%= f.label "内容" ,:class=> "label label-info"%><div id="content_error"></div>
  <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[img][/img]')" value="画像" ></input>
  <input type="button" onclick="insertText(document.getElementById('txtarea1'),'[b][/b]')" value="bold" ></input>
  </p>
  <%= f.text_area :content ,:id=>"txtarea1", :class=>"span5"%>
</p>
  <p><%= f.submit "投稿"%></p>
<% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
